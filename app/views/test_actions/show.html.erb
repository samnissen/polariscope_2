<%- model_class = TestAction -%>
<div class="page-header">
  <h1><%=t '.title', :default => TestAction %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @test_action.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @test_action.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:activity) %></dt>
      <dd><pre class="prettyprint"><%= @test_action.activity.action_name %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              collection_testset_path(@test_action.testset.collection, @test_action.testset), :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_collection_testset_test_action_path(@test_action.testset.collection, @test_action.testset, @test_action), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              collection_testset_test_action_path(@test_action.testset.collection, @test_action.testset, @test_action),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
