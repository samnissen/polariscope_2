<%= simple_form_for(@run_test_action) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :test_action %>
    <%= f.association :run %>
    <%= f.association :activity %>
    <%= f.input :additional_info %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
